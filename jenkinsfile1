pipeline {
	agent any 
	stages {
		stage('scmcheckout') {
			steps {
				git branch: 'master', url: 'https://github.com/rohitanair/maven-sonar.git'
			}
		}
		stage('validate code') {
			steps {
				withMaven(jdk: 'localjdk-1.8', maven: 'localmaven') {
					// some block
					sh 'mvn validate'
				}
			}
		}
		stage('compile code') {
			steps {
				withMaven(jdk: 'localjdk-1.8', maven: 'localmaven') {
					// some block
					sh 'mvn compile'
				}
			}
		}
		stage('test code') {
			steps {
				withMaven(jdk: 'localjdk-1.8', maven: 'localmaven') {
					// some block
					sh 'mvn test'
				}
			}
		}
		stage('Sonar and maven package') {
			steps {
				withSonarQubeEnv('jenkinsonar') {
					withMaven(jdk: 'localjdk-1.8', maven: 'localmaven') {
					// some block
					sh 'clean mvn install sonar:sonar'
				}
				}
			}
		}
	}
}
